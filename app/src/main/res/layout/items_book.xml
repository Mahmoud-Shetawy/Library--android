<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:id="@+id/item_book_ratingBar"
        >

    <ImageView

            android:layout_width="0dp"
            android:layout_height="135dp"
            android:id="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/ligh_meduim_gray"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp"
            android:contentDescription="TODO" />

    <ImageView
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/item_book_img"
            tools:ignore="MissingConstraints,ImageContrastCheck"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="TODO"
            app:layout_constraintVertical_bias="0.444"
            app:srcCompat="@drawable/book1" />

    <TextView
            android:textStyle="bold"
            android:text="An Shetawy life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_book_tittle"
            app:layout_constraintStart_toEndOf="@+id/item_book_img"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" />

    <TextView
            android:text="By Mahmoud shetawy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_book_author"
            app:layout_constraintStart_toEndOf="@+id/item_book_img"
            app:layout_constraintTop_toBottomOf="@+id/item_book_tittle"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

    <RatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            app:layout_constraintStart_toEndOf="@+id/item_book_img"
            app:layout_constraintTop_toBottomOf="@+id/item_book_author"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

    <TextView
            android:text="score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_book_score"
            app:layout_constraintStart_toEndOf="@+id/ratingBar"
            app:layout_constraintTop_toTopOf="@+id/ratingBar"
            app:layout_constraintBottom_toBottomOf="@+id/ratingBar"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

    <TextView
            android:text="225 pages | 23 review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_book_pagesview"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            app:layout_constraintStart_toEndOf="@+id/item_book_img"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp" />

    <ImageView
            android:tint="@color/fav_icon_tint"
            android:layout_width="58dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/delete_vec"
            android:id="@+id/item_delete"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            tools:ignore="UseAppTint"
            android:backgroundTint="#7E1111" />

    <ImageView
            android:layout_width="49dp"
            android:layout_height="31dp"
            app:srcCompat="@drawable/edit_vec"
            android:id="@+id/item_edit"
            app:layout_constraintTop_toBottomOf="@+id/item_delete"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>