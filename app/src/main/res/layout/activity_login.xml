<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    android:gravity="center"
    android:paddingLeft="70px"
    android:paddingRight="70px"
    >
    <TextView
        android:text="@string/login"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="30px"
        android:layout_marginBottom="320dp"/>
    <TextView
        android:id="@+id/tvErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"/>


    <EditText
        android:id="@+id/etUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_user_icon"
        android:drawableLeft="@drawable/custom_user_icon"
        android:drawablePadding="30px"
        android:hint="      @string/username"
        android:inputType="textPersonName"
        android:minHeight="100px"
        android:padding="20px"
        android:textColor="@color/black"
        android:textColorHint="@color/gray">

    </EditText>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_input"
        android:minHeight="100px"
        android:padding="20px"
        android:drawablePadding="30px"
        android:layout_marginTop="30px"
        android:hint="      @string/password"
        android:textColor="@color/black"
        android:drawableStart="@drawable/custom_lock_icon"
        android:drawableLeft="@drawable/custom_lock_icon"
        android:textColorHint="@color/gray">

    </EditText>
    <CheckBox
        android:id="@+id/checkBoxSaveLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:shadowColor="@color/orange"
        android:buttonTint="@color/purple"
        android:text="@string/save_login"/>
    <Button
        android:layout_marginTop="60px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:text="@string/login"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/purple"
        android:onClick="loginButton">

    </Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30px">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/light_gray"
            android:minWidth="100dp"
            android:minHeight="25px"
            android:layout_marginLeft="10px"
            android:text="@string/create_account"
            android:textAlignment="center"
            android:textColor="@color/black">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/light_gray"
            android:minWidth="10dp"
            android:minHeight="10dp"
            android:text="@string/sign_up"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:onClick="signUpTxtView">

        </TextView>


    </LinearLayout>
</LinearLayout>